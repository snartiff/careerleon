<div class="new_goal">

<h1 class="new_goal_header">new career goal</h1>
<%= form_for(@goal) do |f| %>

<div class="goal_form">
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description%><br>

  <%= f.label :deadline %><br>
  <%= f.text_field :deadline %><br>

  <%= f.submit "Add Career Goal" %>
</div>

<% end %>
</div>

<div class="footer">
  <%= link_to 'back to my goals', goals_path %>
</div>
